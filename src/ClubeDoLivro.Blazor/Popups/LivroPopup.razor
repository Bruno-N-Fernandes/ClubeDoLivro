<MudDialog Style="max-height: 500px">
	<TitleContent>
		<MudText Typo="Typo.h6">@MudDialog.Title</MudText>
	</TitleContent>

	<DialogContent>
		<MudTextField ReadOnly Value="Livro.Id" Label="Id" Variant="Variant.Outlined" Margin="Margin.Dense"      />
		<MudTextField ReadOnly="@Mode.In(Mode.Mostrar, Mode.Excluir)" @bind-Value="Livro.Nome" Label="Nome" Variant="Variant.Outlined" Margin="Margin.Dense"    />
		<MudTextField ReadOnly="@Mode.In(Mode.Mostrar, Mode.Excluir)" @bind-Value="Livro.ISBN" Label="ISBN" Variant="Variant.Outlined" Margin="Margin.Dense"    />
		<MudTextField ReadOnly="@Mode.In(Mode.Mostrar, Mode.Excluir)" @bind-Value="Livro.Edicao" Label="Edicao" Variant="Variant.Outlined" Margin="Margin.Dense"  />
		<MudTextField ReadOnly="@Mode.In(Mode.Mostrar, Mode.Excluir)" @bind-Value="Livro.Volume" Label="Volume" Variant="Variant.Outlined" Margin="Margin.Dense"  />
		<MudTextField ReadOnly="@Mode.In(Mode.Mostrar, Mode.Excluir)" @bind-Value="Livro.Paginas" Label="Paginas" Variant="Variant.Outlined" Margin="Margin.Dense" />
	</DialogContent>

	<DialogActions>
		<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Incluir" hidden="@(Mode != Mode.Incluir)">Incluir</MudButton>
		<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Alterar" hidden="@(Mode != Mode.Alterar)">Alterar</MudButton>
		<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Excluir" hidden="@(Mode != Mode.Excluir)">Excluir</MudButton>
		<MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="Cancelar">Cancelar</MudButton>
	</DialogActions>
</MudDialog>